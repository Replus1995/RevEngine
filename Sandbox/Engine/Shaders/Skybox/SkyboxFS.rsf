#version 460 core
#pragma shader_stage(fragment)
#extension GL_ARB_separate_shader_objects : enable
#extension GL_GOOGLE_include_directive : enable

layout(location = 0, binding = 11) uniform samplerCube s_EnviornmentTex;

layout(location = 0) in Vertex
{
    vec2 TexCoord0;
    vec3 ViewDir;
} IN;

layout(location = 0) out vec4 o_Color;

void main()
{
	o_Color.rgb = texture(s_EnviornmentTex, IN.ViewDir).rgb;
    o_Color.a = 1.0;
}