#include "Engine/Shaders/Core/Base.rsh"

SAMPLERCUBE(sEnv, 11);

struct PSInput
{
    float4 Position : SV_POSITION;
    float3 ViewDir  : TEXCOORD0;
};

struct PSOutput
{
    float4 Color : SV_Target;
};

PSOutput main(const PSInput Input)
{
    PSOutput Result;
    Result.Color.rgb = sEnv.Sample(Input.ViewDir).rgb;
    Result.Color.a = 1.0f;
    return Result;
}